/* pages/detail/detail.wxss */

.detail {
  width: 100%;
  height: 300rpx;
  margin-bottom: 30rpx;
  padding: 10rpx;
  background-color: #fff;
}

.detail .user {
  display: flex;
  margin-top: 10rpx;
  margin-left: 15rpx;
}

.detail .user image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.detail .user text {
  height: 45rpx;
  font-size: 50rpx;
  font-weight: bold;
  margin: auto 30rpx;
}

.detail .content {
  margin-top: 25rpx;
  margin-left: 150rpx;
  font-size: 35rpx;
}

.detail .content .actions {
  display: flex;
  justify-content: start;
  width: 100%;
  margin-top: 35rpx;
}

.detail .content .actions .action {
  margin-right: 20rpx;
}

.detail .content .actions .action image {
  width: 45rpx;
  height: 45rpx;
}

.detail .content .actions .action text {
  margin-left: 5rpx;
  font-size: 30rpx;
  color: gray;
}

.detail .content .actions .time {
  margin-top: 10rpx;
  margin-left: 100rpx;
  font-size: 30rpx;
  color: gray;
}

.comment {
  width: 100%;
  position: absolute;
  bottom: 0;
  display: flex;
  padding: 30rpx 0;
  background-color: gainsboro;
}

.comment .input {
  width: 75%;
  padding-left: 30rpx;
}

.comment button {
  padding: 10rpx 30rpx;
  text-align: center;
  font-size: 30rpx;
  letter-spacing: 3rpx;
}