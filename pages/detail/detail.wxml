<!--pages/detail/detail.wxml-->
<view class="container">
  <view class="detail">
    <view class="user">
      <image src="{{data.avatar}}" bindtap="toUser" data-id="{{data.userId}}"></image>
      <text bindtap="toUser" data-id="{{data.userId}}">{{data.userName}}</text>
    </view>
    <view class="content">
      <text>{{data.content}}</text>
      <view class="actions">
        <view class="action">
          <image src="{{data.islike ? icon.LIKE_ACTIVE : icon.LIKE_INACTIVE}}"></image>
          <text>{{data.likes}}</text>
        </view>
        <view class="action" bindtap="tapMainComment">
          <image src="{{icon.COMMENT}}"></image>
          <text>{{total}}</text>
        </view>
        <view class="time">{{data.time}}</view>
      </view>
    </view>
  </view>
  <view class="list">
    <comment-list data="{{list}}" hasMore="{{hasMore}}" bind:tapUser="toCommentUser" bind:tapComment="tapSubComment" bind:onRefresh="onRefresh" bind:loadMore="loadMore" />
  </view>
  <view class="comment">
    <view class="input">
      <van-field value="{{content}}" focus="{{focus}}" placeholder="评论一下" clearable bind:change="onChange" />
    </view>
    <button type="primary" size="mini" bindtap="onComment">评论</button>
  </view>
</view>