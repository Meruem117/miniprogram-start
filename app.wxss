@import "./styles/iconfont.wxss";

page {
  --themeColor: #8B008B;
  --bg-light: #E6E6FA;
  --bg-dark: #4169E1;
  background: var(--bg-light);
  height: 100%;
  font-size: 32rpx;
}

.container {
  width: 100%;
  height: 100%;
  position: relative;
}

.scroll {
  height: 100%;
  width: 100%;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-col {
  display: flex;
  flex-direction: column;
}